<Window x:Class="ContactApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nametextBox" Margin="0,5,0,5"></TextBox>
            <TextBox x:Name="emailTextBox" Margin="0,5,0,5"></TextBox>
            <TextBox x:Name="phoneTextBox" Margin="0,5,0,5"></TextBox>
            <Button Content="Update" Margin="0,5,0,5" Background="DodgerBlue"
                    Click="updateButton_Click"></Button>
            <Button 
                Content="Delete" 
                Margin="0,5,0,5" 
                Background="red" 
                Click="deleteButton_Click"></Button>
        </StackPanel>

    </Grid>
</Window>
