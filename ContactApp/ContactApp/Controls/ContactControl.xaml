<UserControl x:Class="ContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="LightBlue">
        <StackPanel Margin="5" >
            <TextBlock x:Name="nameTextBlock"  Text="FirstName LastName" FontSize="20" FontWeight="Bold"></TextBlock>
            <TextBlock x:Name="emailTextBlock"  Text="akshay@gmail.com" FontSize="10"  Foreground="DodgerBlue"></TextBlock>
            <TextBlock x:Name="phoneTextBlock"  Text="1234567890" FontSize="10" FontStyle="Italic"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
